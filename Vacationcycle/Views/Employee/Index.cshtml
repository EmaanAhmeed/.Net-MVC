@model IEnumerable<Vacationcycle.Models.Employee>
@{
    ViewData["Title"] = "Index";
}


@if ( Model?.Count() > 0)
{
    <div class="container">
        <div class="row">
            <div class="col-12 col-sm-6">
             <h2>Employees</h2>
             </div>
             <div class="col-12 col-sm-6 text-right">
                  <a asp-controller="Employee" asp-action="Create" class="btn btn-dark">Create New</a>
             </div>

        </div>
        <div class="row">
        <div class="col-12 col-sm">
           
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead class="table-dark text-white">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Job title</th>
                            <th>Hiring date</th>
                            <th>profile image</th>
                            <th>Birth date</th>
                            <th>Mobile no.</th>
                            <th>Email</th>
                            <th>Address</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                            @foreach(var obj in Model)
                            {
                             <tr>
                            <td>@obj.ID</td>
                            <td>@obj.Name</td>
                            <td>@obj.Jobtitle</td>
                            <td>@obj.HiringDate</td>
                            <td>@obj.ProfileImage</td>
                            <td>@obj.Birthdate</td>
                            <td>@obj.MobileNo</td>
                            <td>@obj.Email</td>
                            <td>@obj.Address</td>
                            <td>
                         <a asp-controller="Employee" asp-action="Edit" asp-route-id="@obj.ID" class="btn btn-dark">Edit</a> |
                         <a asp-controller="Employee" asp-action="Details" asp-route-id="@obj.ID" class="btn btn-dark">Details</a> |
                         <a asp-controller="Employee" asp-action="Delete" asp-route-id="@obj.ID" class="btn btn-dark">Delete</a>
                            </td>
                                </tr>  
                            }
                            
                    </tbody>
                </table>
            </div>
        </div>
   </div> 
    </div>


}
else
{
    <p>No Employees exist</p>
}
