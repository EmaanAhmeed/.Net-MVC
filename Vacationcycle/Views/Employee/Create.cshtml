@model Vacationcycle.Models.Employee
<form method='post' asp-action="Create">
	 <div class="form-group row">

        <label class="col-md-6">Name</label>
           <div class="col-md-6">
           <input asp-for="Name" class="form-control">
           </div>
           </div>
           <div class="form-group row">
           <label class="col-md-6">Job title</label>
          <div class="col-md-6">
         <input asp-for="Jobtitle" class="form-control">
            </div>
            </div>
            <div class="form-group row">
            <label class="col-md-6">Hiring date</label>
          <div class="col-md-6">
         <input asp-for="HiringDate" class="form-control">
            </div>
            </div>
            <div class="form-group row">
            <label class="col-md-6">Profile image</label>
          <div class="col-md-6">
         <input asp-for="ProfileImage" class="form-control">
            </div>
            </div>
            <div class="form-group row">
               <label class="col-md-6">Birth date</label>
          <div class="col-md-6">
         <input asp-for="Birthdate" class="form-control">
            </div>
            </div>
            <div class="form-group row">
               <label class="col-md-6">Mobile number</label>
          <div class="col-md-6">
         <input asp-for="MobileNo" class="form-control">
            </div>
            </div>
            <div class="form-group row">
               <label class="col-md-6">Email</label>
          <div class="col-md-6">
         <input asp-for="Email" class="form-control">
            </div>
            </div>
            <div class="form-group row">
               <label class="col-md-6">Address</label>
          <div class="col-md-6">
         <input asp-for="Address" class="form-control">
            </div>
         </div>
    <div class="form-group row">
      <div class="offset-md-2 col-md-10">
     <input type="submit" class="btn btn-info w-100" value="Create"/>
            </div>
     </div>

</form>


